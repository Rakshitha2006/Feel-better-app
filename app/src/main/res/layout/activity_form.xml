<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background1"
    tools:context=".form">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORM"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/pink"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:hint="Name"
        android:textColorHint="@color/purple_500" />

    <EditText
        android:id="@+id/education"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/sname"
        android:layout_marginTop="30dp"
        android:hint="Education"
        android:textColorHint="@color/purple_500" />

    <EditText
        android:id="@+id/fatherocc"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/education"
        android:layout_marginTop="20dp"
        android:hint="Father's Occupation"
        android:textColorHint="@color/purple_500" />

    <EditText
        android:id="@+id/motherocc"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/fatherocc"
        android:layout_marginTop="20dp"
        android:hint="Mother's Occupation"
        android:textColorHint="@color/purple_500" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/motherocc"
        android:layout_marginTop="20dp"
        android:hint="Email"
        android:textColorHint="@color/purple_500" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/email"
            android:layout_marginTop="20dp"
            android:hint="Mobile Number"
            android:textColorHint="@color/purple_500" />

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/phone"
            android:layout_marginTop="20dp"
            android:hint="Age"
            android:inputType="number"
            android:textColorHint="@color/purple_500" />
        <TextView
        android:id="@+id/siblings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        android:text="Siblings:"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/siblings"
        android:hint="How many siblings do you have?"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="@color/purple_500" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Gender:"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/siblings"/>

    <RadioButton
        android:id="@+id/radio_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:text="Male"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />

    <RadioButton
        android:id="@+id/radio_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_1"
        android:text="Female"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />

    <RadioButton
        android:id="@+id/radio_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_2"
        android:text="Transgender"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        tools:ignore="TextSizeCheck" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/subform"
        android:layout_below="@id/radio_3"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_marginTop="20dp"
            android:id="@+id/sublogin"
            android:layout_below="@id/subform"/>


    </LinearLayout>





</ScrollView>